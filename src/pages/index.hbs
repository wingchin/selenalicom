---
title:      Welcome to <%= site.title %>
subtitle:   <%= site.description %>

layout:     false
full:       true
---
{{#extend "base"}}

  {{#content "title"}}
    <title>{{site.title}}</title>
  {{/content}}

  {{#content "masthead" mode="append"}}
    <a href="#main" class="btn-scroll">
      <i class="fa fa-angle-down animated"></i>
    </a>
  {{/content}}

  {{#content "body"}}
    <section id="intro" class="large-padding white">
      <div class="container text-center">
        <div class="row">
          <div class="col-md-10 col-md-offset-1">
            <h2>Selena Li Sze-Wan is a Chinese-Canadian award-winning artiste based in Hong Kong, most commonly known for her performances in TVB television dramas.</h2>
          </div>
        </div>
      </div>
    </section>

    <section class="no-padding">
      <div class="container-fluid">
        <div id="instafeed" class="row"></div>
      </div>
    </section>
  {{/content}}

  {{#content "script" mode="prepend"}}
    <script src="{{assets}}/js/plugins/instafeed.min.js"></script>
  {{/content}}

{{/extend}}