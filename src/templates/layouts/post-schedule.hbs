---
layout: base.hbs
---
<section id="event-post" class="default-padding">
  <div class="container">
    <div class="row">

      <div class="details col-md-5">
        <h2>{{title}}</h2>

        <div id="myTab" class="small-padding" role="tablist">
          <ul class="nav nav-tabs" role="tablist">
            <li class="active" role="presentation">
              <a href="#details" data-toggle="tab" role="tab">Event details</a>
            </li>
            <li role="presentation">
              <a href="#attendees" data-toggle="tab" role="tab">Attendees</a>
            </li>
          </ul>
          <div class="tab-content">
            <div id="details" class="tab-pane active" role="tabpanel">
              <dl class="dl-horizontal">
                <dt><i class="fa fa-calendar"></i> Date</dt>
                <dd>{{formatDate date "%B %e, %Y"}}</dd>
                <dt><i class="fa fa-clock-o"></i> Time</dt>
                <dd>{{formatDate date "%l:%M %P"}}</dd>
                <dt><i class="fa fa-map-marker"></i> Venue</dt>
                <dd>{{venue}}</dd>
                <dt><i class="fa fa-location-arrow"></i> Address</dt>
                <dd>{{address}}</dd>
              </dl>
            </div>
            <div id="attendees" class="tab-pane" role="tabpanel">
              {{{attendees}}}
            </div>
          </div>
        </div>
      </div>

      <div class="col-md-7">
        <div id="map"></div>
      </div>

    </div>
  </div>
</section>